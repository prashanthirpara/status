<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    tools:ignore="GradleDependency">

    <ImageButton
        android:id="@+id/imageselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/add_btn"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/descfield"
        android:layout_width="346dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/submitpost"
        android:layout_below="@+id/imageselect"
        android:background="@drawable/input_outline"
        android:hint="status category"
        android:inputType="text"
        android:padding="15dp"
        android:textSize="12sp"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="315dp" />


    <Button
        android:id="@+id/submitpost"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:text="Submit Post"
        android:textColor="@android:color/white"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="457dp" />

</RelativeLayout>
